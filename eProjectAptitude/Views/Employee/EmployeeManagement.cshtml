@model IEnumerable<eProjectAptitude.Models.Entity.Employee>

@{
    ViewBag.Title = "EmployeeManagement";
    Layout = "~/Views/Home/_MyLayout.cshtml";
}

<h2>EmployeeManagement</h2>

<p>
