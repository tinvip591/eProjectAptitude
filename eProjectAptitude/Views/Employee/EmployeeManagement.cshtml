            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Account)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdR)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditEmployee", new { id=item.IdE }) |
            @Html.ActionLink("Details", "DetailEmployee", new { id=item.IdE }) |
            @Html.ActionLink("Delete", "DeleteEmployee", new { id=item.IdE })
        </td>
    </tr>
