@model eProjectAptitude.Models.Entity.ExaminationDetail

@{
    ViewBag.Title = "AddExamDe";
    Layout = "~/Views/Home/_MyLayout.cshtml";
}

<h2>AddExamDe</h2>

@using (Html.BeginForm("AddExamDe", "ExamDetails", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ExaminationDetail</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.IDQuestion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="IDQuestion">
                    @foreach (var item in ViewBag.QuestionList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDExam, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="IDExamn">
                    @foreach (var item in ViewBag.ExaminationList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TotalMarks, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TotalMarks, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TotalMarks, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ExamDeManagement")
</div>
